{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "./",
    "outDir": "dist",

    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "api/**/*",
    "types/**/*",
    "vercel-server.ts"
  ],
  "exclude": ["dist"]
}