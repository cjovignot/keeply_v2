{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16", // ✅ obligatoire avec moduleResolution Node16
    "moduleResolution": "Node16", // ✅ pour ESM et imports relatifs corrects
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["api/**/*", "vercel-server.ts", "../server-local.ts"]
}
