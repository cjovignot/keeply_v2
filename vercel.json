{
  "version": 2,
  "builds": [
    { "src": "api/vercel-server.ts", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/vercel-server.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
